<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TeamR3.mapper.TeamR3_Mapper">

<select id = "getuser" parameterType = "TeamR3.entity.User" resultType = "TeamR3.entity.User">
select * from user where user_id = #{user_id} and user_password = #{user_password}
</select>
<!-- 添加用户 -->
<insert id="adduser" parameterType="TeamR3.entity.User" >
	insert into
	user(user_id,user_name,user_password,user_right,user_job) 
	values(#{user_id},#{user_name},#{user_password},#{user_right},#{user_job})
</insert>
<!-- 修改用户 -->
<update id="modifyuser" parameterType="TeamR3.entity.User">
	update user set
	user_name=#{user_name},user_password=#{user_password},user_right=#{user_right},
	user_job=#{user_job} where user_id=#{user_id}
</update>
<!-- 删除用户 -->
<delete id="deluser" parameterType="int">
	delete from user where
	user_id=#{user_id}
</delete>

<!-- 查询所有商品类别信息 -->
<select id="querygoodtype" resultType = "TeamR3.entity.GoodType">
	select * from good_type
</select>

<!-- 增加商品类别 -->
<insert id="addgoodtype" parameterType="TeamR3.entity.GoodType">
	insert into good_type 
	values(#{good_type_id},#{good_type_info})
</insert>

<!-- 修改商品类别 -->
<update id="modifygoodtype" parameterType="TeamR3.entity.GoodType">
	update good_type set
	good_type_info=#{good_type_info} 
	where good_type_id=#{good_type_id}
</update>

<!-- 删除商品类别 -->
<delete id="delgoodtype" parameterType="int">
	delete from good_type where
	good_type_id=#{good_type_id}
</delete>
</mapper>

